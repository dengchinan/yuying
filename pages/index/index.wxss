.img {
  height: 600px;
  width: 750rpx;
  webkit-filter: blur(5px);
  filter: blur(5px);
  background-size: 100%;
  background-repeat: no-repeat;
}

text {
  position: absolute;
  width: 300px;
  height: 100px;
  top: 500px;
  background-color: rgba(243, 236, 236, 0.014);
  opacity: 0.5;
  text-align: center;
  color: black;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 5;
  overflow: hidden;
  text-overflow: ellipsis;
}

.img1 {
  position: absolute;
  top: 35px;
  width: 650rpx;
  height: 450px;
  border-radius: 7%;
  margin-left: 20px;
}

button {
  width: 15%;
  right: -10px;
  top: 500px;
  background: #98e998;
  font-size: 12px;
  text-indent: -5px;
  border-radius: 15px;
  text-align: right;
  margin-top: 1.6vw;
  display: flex;
  flex-direction: row;
  position: fixed;

}
